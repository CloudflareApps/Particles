{
  "resources": {
    "head": [
      {
        "type": "style",
        "src": "./build/app.css"
      },
      {
        "type": "script",
        "src": "./vendor/tinycolor.js"
      },
      {
        "type": "script",
        "src": "./vendor/particles.js"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "particleColor": {
        "order": 1,
        "title": "Particle color",
        "type": "string",
        "format": "color",
        "description": "Defaults to contrasting color."
      },
      "backgroundColor": {
        "order": 2,
        "title": "Background color",
        "type": "string",
        "format": "color",
        "description": "Defaults to transparent."
      },

      "interaction": {
        "order": 3,
        "type": "object",
        "title": "Interaction",
        "properties": {
          "onHover": {
            "order": 1,
            "type": "string",
            "description": "What should the particles do when the user moves their pointer?",
            "title": "Hover",
            "default": "grab",
            "enum": [
              "grab",
              "repulse",
              "bubble",
              "none"
            ],
            "enumNames": {
              "grab": "Connect to pointer",
              "repulse": "Push away",
              "bubble": "Grow",
              "none": "Nothing"
            }
          },
          "onClick": {
            "order": 2,
            "type": "string",
            "title": "Click",
            "description": "What should the particles do when the user clicks their pointer?",
            "default": "push",
            "enum": [
              "push",
              "repulse",
              "bubble",
              "none"
            ],
            "enumNames": {
              "push": "Add particles",
              "repulse": "Push particles away",
              "bubble": "Grow particles",
              "none": "Nothing"
            }
          }
        }
      },

      "behavior": {
        "order": 4,
        "type": "object",
        "title": "Behavior",
        "properties": {
          "outMode": {
            "order": 0,
            "type": "string",
            "title": "Screen edges",
            "description": "What should happen when a particle hits the edge of the screen?",
            "default": "out",
            "enum": [
              "out",
              "bounce"
            ],
            "enumNames": {
              "bounce": "Bounce back in",
              "out": "Flow offscreen"
            }
          }
        }
      },

      "showAdvanced": {
        "order": 5,
        "type": "boolean",
        "title": "Show advanced options"
      },

      "fewerParticles": {
        "showIf": "showAdvanced",
        "order": 6,
        "type": "boolean",
        "title": "Display fewer particles",
        "description": "Fewer particles may increase performance."
      },

      "location": {
        "order": 7,
        "showIf": "showAdvanced",
        "title": "Background location",
        "description": "Where should the particle background appear?",
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      }
    }
  }
}
